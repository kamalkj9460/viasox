{%- liquid
  if cart == empty
    render 'icon-cart'
  else
    render 'icon-cart'
  endif
-%}
<span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>

  <div class="cart-count-bubble">
      {%- if cart.item_count < 100 -%}
        <span data-ajax-cart-bind-state="cart.item_count" aria-hidden="true">{{ cart.item_count }}</span>
      {%- endif -%}
      <span data-ajax-cart-bind-state="cart.item_count" class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
  </div>
 <div class="cart-text">
            <span>Cart(<span data-ajax-cart-bind-state="cart.item_count">{{ cart.item_count }}</span>)</span>
            </div>

