{{ section.settings.custom-slider }}
<link rel="stylesheet" data-href="{{ 'custom-slider.css' | asset_url }}" as="style">

<div data-section-id="{{ section.id }}" data-section-type="testimonial" class="testimonial">  
  {%- assign collection = collections[section.settings.collection] -%}   

  <div class="grid-uniform">  

    <div class="container-fluid" style="background-color:{{section.settings.background_color}}">
      		           
         
            <div class="testimonial-content">      
          
              
                       
              <div class="items-wrapper">                            
                <div class="items {{ section.id }}-loop " >    
                  <div class="carousel2">
                  {% if section.blocks.size > 0 %}  
                  {% for block in section.blocks %} 
                   
                  <div class="testimonial-detail" >  
                    <div class="author-detail">
                
                    
                      <div class="test-img">
                          {% if block.settings.avatar != blank %}
                        
                        {% comment %}Speed optimization code start{% endcomment %}
                        <img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" class="lazyload" data-src="{{ block.settings.avatar | img_url: '185.4x120' }}" />
                        {% comment %}Speed optimization end start{% endcomment %}
                  
                        
                         {% endif %}
                      </div>
                            
                      {% if block.settings.rating_score != blank %}
                      <div class="rating">
                        <h5 class="rating-score" style="color:{{block.settings.rating_color }}">{{ block.settings.rating_score }}</h5>
                      </div>
                      {% endif %}
                     
                      {% if block.settings.author_name != blank %}
                      <div class="author">
                        {{ block.settings.author_name }} 
                      </div>
                      {% endif %}
                    </div>
                    
                      {% if block.settings.text_desc != blank %}
                      <div class="quote" style="color:{{block.settings.des_color }}">{{ block.settings.text_desc }}</div>
                      {% endif %} 
                    
                  </div>
                  
                  {% endfor %}         
                  {% endif %} 
                    </div>
                </div>       
                
              </div>
            
        	
      
         
    </div>
  </div>

</div>
</div>




{% comment %}Speed optimization code start{% endcomment %}
<script>
 function load_carousel2() {
$('.carousel2').slick({
  dots: false,
  infinite: true,
  speed: 8000,
  
  autoplay: true,
  cssEase:'linear',
  autoplaySpeed: 0,
  slidesToShow: 4,
  pauseOnHover:false,
  draggable:false,
  responsive: [
    {
      breakpoint: 1024,
      settings: {
        slidesToShow: 3
       
    
    

  
      }
    },
    {
      breakpoint: 768,
      settings: {
        slidesToShow: 2
      

  
 
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1
    

      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
});
}
if(window.innerWidth>0.4e3) load_carousel2(); else document.addEventListener('StartAsyncLoading',function(event){load_carousel2();});  
</script>
{% comment %}Speed optimization code end{% endcomment %}


