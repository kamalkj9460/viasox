<div class="main-review_section">
  <div class="page-width">
    <h2 class="title h1 center">{{ section.settings.title }}</h2>
    <div class="main-banner-reviews-text">
               <div class=" yotpo bottomLine"
    data-appkey="IU654GhrymKotQO3weIEKxubNZIaRR5d7yfbmWaT"
    data-domain="{{shop.permanent_domain | escape }}"
    data-product-id="{{ product.id }}"
    data-product-models="{{ product.id }}"
    data-name="{{ product.title | escape }}"
    data-url="{{ shop.url }}{{ product.url }}"
    data-image-url="{{ product.featured_image | product_img_url: 'large' |replace: '?', '%3F' | replace: '&','%26'}}"
    data-description="{{ product.description | escape }}"
    data-bread-crumbs="{% for tag in product.tags %}{{ tag | escape }};{% endfor %}">
            </div>    </div>
    <div class="main-rev-sec-slider">
      {% for block in section.blocks %}
      <div class="main-rev-sec-slide">
        <div class="rev-slide-content">
          
          {% comment %}Speed optimization code start{% endcomment %}
          {% if block.settings.img != blank %}<img src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw==" class="lazyload" data-src="{{ block.settings.img | img_url : 'master' }}">{% endif %}
          {% comment %}Speed optimization code end{% endcomment %}
          
          <div class="review-custom-content">
            <div class="prs-stars">
              <span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M259.3 17.8L194 150.2 47.9 171.5c-26.2 3.8-36.7 36.1-17.7 54.6l105.7 103-25 145.5c-4.5 26.3 23.2 46 46.4 33.7L288 439.6l130.7 68.7c23.2 12.2 50.9-7.4 46.4-33.7l-25-145.5 105.7-103c19-18.5 8.5-50.8-17.7-54.6L382 150.2 316.7 17.8c-11.7-23.6-45.6-23.9-57.4 0z"></path></svg></span>
              <span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M259.3 17.8L194 150.2 47.9 171.5c-26.2 3.8-36.7 36.1-17.7 54.6l105.7 103-25 145.5c-4.5 26.3 23.2 46 46.4 33.7L288 439.6l130.7 68.7c23.2 12.2 50.9-7.4 46.4-33.7l-25-145.5 105.7-103c19-18.5 8.5-50.8-17.7-54.6L382 150.2 316.7 17.8c-11.7-23.6-45.6-23.9-57.4 0z"></path></svg></span>
              <span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M259.3 17.8L194 150.2 47.9 171.5c-26.2 3.8-36.7 36.1-17.7 54.6l105.7 103-25 145.5c-4.5 26.3 23.2 46 46.4 33.7L288 439.6l130.7 68.7c23.2 12.2 50.9-7.4 46.4-33.7l-25-145.5 105.7-103c19-18.5 8.5-50.8-17.7-54.6L382 150.2 316.7 17.8c-11.7-23.6-45.6-23.9-57.4 0z"></path></svg></span>
              <span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M259.3 17.8L194 150.2 47.9 171.5c-26.2 3.8-36.7 36.1-17.7 54.6l105.7 103-25 145.5c-4.5 26.3 23.2 46 46.4 33.7L288 439.6l130.7 68.7c23.2 12.2 50.9-7.4 46.4-33.7l-25-145.5 105.7-103c19-18.5 8.5-50.8-17.7-54.6L382 150.2 316.7 17.8c-11.7-23.6-45.6-23.9-57.4 0z"></path></svg></span>
              <span><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M259.3 17.8L194 150.2 47.9 171.5c-26.2 3.8-36.7 36.1-17.7 54.6l105.7 103-25 145.5c-4.5 26.3 23.2 46 46.4 33.7L288 439.6l130.7 68.7c23.2 12.2 50.9-7.4 46.4-33.7l-25-145.5 105.7-103c19-18.5 8.5-50.8-17.7-54.6L382 150.2 316.7 17.8c-11.7-23.6-45.6-23.9-57.4 0z"></path></svg></span>
            </div>
            <p class="customer-name">
              {{ block.settings.customer }}
            </p>
            <h3 class="custom-rev-title">
              {{ block.settings.rev-title }}
            </h3>
            <p class="custom-rev-text">
              {{ block.settings.rev-text }}
            </p>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    
    <div class="main-rev-btn center">
      <a class="show-btn" href="{{ section.settings.btnlink1 }}">{{ section.settings.btn1 }}</a>
      <a href="{{ section.settings.btnlink2 }}" class="button">{{ section.settings.btn2 }}</a>
    </div>
    
  </div>
</div>

{% schema %}
  {
    "name": "main Review Section",
    "settings": [
	  {
		"type" : "text",
		"id" : "title",
		"label" : "Title"
	  },
	  {
		"type" : "text",
		"id" : "text",
		"label" : "Text"
	  },
	  {
		"type" : "text",
		"id" : "btn1",
		"label" : "Button"
	  },
	  {
		"type" : "url",
		"id" : "btnlink1",
		"label" : "Button Link"
	  },
	  {
		"type" : "text",
		"id" : "btn2",
		"label" : "Second Button"
	  },
	  {
		"type" : "url",
		"id" : "btnlink2",
		"label" : "Second Button Link"
	  }
	],
	"blocks" : [
	  {
		"type" : "review",
		"name" : "review",
		"settings" : [
		  {
            "type" : "image_picker",
            "id" : "img",
            "label" : "Background image"
		  },
		  {
            "type" : "text",
            "id" : "customer",
            "label" : "Customer name"
		  },
		  {
            "type" : "text",
            "id" : "rev-title",
            "label" : "Customer review title"
		  },
		  {
            "type" : "textarea",
            "id" : "rev-text",
            "label" : "Customer review"
		  }
		]
	  }
	],
	 "presets" : [
	  {
		"name": "main Review Section"
	  }
	]
  }
{% endschema %}

